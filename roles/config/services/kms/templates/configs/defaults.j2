SERVICEWIDE:
  zookeeper_service: {{ services.json | json_query('items[?type==`ZOOKEEPER`].name') | first }}
  ranger_kms_database_host: {{ databases.RANGER_KMS.host }}
  ranger_km_database_port: {{ databases.RANGER_KMS.port }}
  ranger_km_database_type: {{ databases.RANGER_KMS.type | format_database_type }}
  ranger_km_database_name: {{ databases.RANGER_KMS.name }}
  ranger_km_database_user: {{ databases.RANGER_KMS.user }}
  ranger_km_database_password: {{ databases.RANGER_KMS.password }}

KMS_KEYTRUSTEE:
  cloudera_trustee_keyprovider_hostname-ACTIVE: "{{ keytrustee_server_active }}"
  cloudera_trustee_keyprovider_hostname-PASSIVE: "{{keytrustee_server_passive | default('') }}"
  cloudera_trustee_keyprovider_org: "{{ keytrustee_server_org_name }}"
  cloudera_trustee_keyprovider_auth: "{{ keytrustee_server_auth_secret }}"

RANGER_KMS_SERVER_KTS:
  cloudera_trustee_keyprovider_hostname-ACTIVE: "{{ keytrustee_server_active }}"
  cloudera_trustee_keyprovider_hostname-PASSIVE: "{{keytrustee_server_passive | default('') }}"
  cloudera_trustee_keyprovider_org: "{{ keytrustee_server_org_name }}"
  cloudera_trustee_keyprovider_auth: "{{ keytrustee_server_auth_secret }}"
