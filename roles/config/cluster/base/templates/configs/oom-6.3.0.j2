{%- set oom_heap_dump_dir = cluster.oom.heap_dump_dir | default('/tmp') -%}
{%- set oom_heap_dump_enabled = cluster.oom.heap_dump_enabled | default(True) -%}
{%- set oom_sigkill_enabled = cluster.oom.sigkill_enabled | default(True) -%}
---
FLUME:
  AGENT:
    oom_heap_dump_dir: {{ oom_heap_dump_dir }}
    oom_heap_dump_enabled: {{ oom_heap_dump_enabled }}
    oom_sigkill_enabled: {{ oom_sigkill_enabled }}
SENTRY:
  SENTRY_SERVER:
    oom_heap_dump_dir: {{ oom_heap_dump_dir }}
    oom_heap_dump_enabled: {{ oom_heap_dump_enabled }}
    oom_sigkill_enabled: {{ oom_sigkill_enabled }}
